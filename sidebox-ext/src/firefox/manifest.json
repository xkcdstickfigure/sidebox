{
	"manifest_version": 2,
	"name": "Sidebox",
	"version": "0.5",
	"description": "Create instant email inboxes for signing up to things",
	"icons": {
		"64": "icons/64.png"
	},
	"permissions": ["storage", "*://{{SERVER}}/*"],
	"browser_action": {
		"default_popup": "popup/index.html",
		"default_area": "navbar"
	},
	"content_scripts": [
		{
			"matches": ["*://{{SERVER}}/*"],
			"js": ["content-scripts/login.js"]
		}
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false,
		"type": "module"
	}
}
