{
	"manifest_version": 3,
	"name": "Sidebox",
	"version": "0.5",
	"description": "Create instant email inboxes for signing up to things",
	"icons": {
		"64": "icons/64.png"
	},
	"permissions": ["storage", "contextMenus", "sidePanel"],
	"host_permissions": ["*://{{SERVER}}/*"],
	"action": {
		"default_popup": "app/index.html"
	},
	"side_panel": {
		"default_path": "app/sidebar.html"
	},
	"content_scripts": [
		{
			"matches": ["*://{{SERVER}}/*"],
			"js": ["content-scripts/login.js"]
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
