{
	"manifest_version": 3,
	"name": "Boxes",
	"version": "0.4",
	"description": "Create instant email inboxes for signing up to things",
	"icons": {
		"64": "icons/64.png"
	},
	"permissions": ["storage"],
	"host_permissions": ["*://{{SERVER}}/*"],
	"action": {
		"default_popup": "popup/index.html"
	},
	"content_scripts": [
		{
			"matches": ["*://{{SERVER}}/*"],
			"js": ["content-scripts/login.js"]
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
